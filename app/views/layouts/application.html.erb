<!DOCTYPE html>
<html>
<head>
  <title>Gcamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <p class="navbar-brand">gCamp</p>
    </div>
  </nav>
  <div class="container">
    <%= yield %>
    <footer>

      <hr>

      <%= link_to "About", about_path %>  |  <%= link_to "Terms", terms_path %>

      <%= link_to image_tag("galvanize-badge.png", class: "smaller_image"), "http://www.galvanize.it/#welcome" %>
      <%= link_to image_tag("twitter-badge.png", class: "small_image"), "https://twitter.com/jeffrey_mince" %>
      <%= link_to image_tag("git-badge.png", class: "small_image"), "https://github.com/JMince" %>
      <%= link_to image_tag("linked-in-badge.jpg", class: "small_image"), "https://www.linkedin.com/in/jeffmince" %>
    </footer>
  </div>
</body>
</html>
