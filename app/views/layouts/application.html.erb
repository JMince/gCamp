<!DOCTYPE html>
<html>
<head>
  <title>Gcamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">

    <div class="container">
      <%= link_to 'gCamp', root_path, class: "navbar-brand" %>
      <% if current_user %>
      <ul class = "nav navbar-nav navbar-right" >
        <li> <%= link_to "#{current_user.first_name} #{current_user.last_name}", user_path(current_user) %> </li>
        <li> <%= link_to "Sign Out", sign_out_path %> </li>
      </ul>
      <% else %>
      <ul class = "nav navbar-nav navbar-right" >
        <li> <%= link_to "Sign Up", sign_up_path %> </li>
        <li> <%= link_to "Sign In", sign_in_path %> </li>
      </ul>
      <% end %>
    </div>
  </nav>

  <div class="container">
    <% if flash[:notice]%>
      <div class = "alert alert-success">
        <%= flash[:notice] %>
      </div>
    <%end%>

    <% if flash[:danger]%>
      <div class = "alert alert-danger">
        <%= flash[:danger] %>
      </div>
    <%end%>


    <%= yield %>

    <footer>

      <hr>

      <% unless current_user %>
        <%= link_to "About", about_path %>  |  <%= link_to "Terms", terms_path %> |  <%= link_to "FAQ", faq_path %>
        <%= link_to image_tag("galvanize-badge.png", class: "smaller_image"), "http://www.galvanize.it/#welcome" %>
        <%= link_to image_tag("twitter-badge.png", class: "small_image"), "https://twitter.com/jeffrey_mince" %>
        <%= link_to image_tag("git-badge.png", class: "small_image"), "https://github.com/JMince" %>
        <%= link_to image_tag("linked-in-badge.jpg", class: "small_image"), "https://www.linkedin.com/in/jeffmince" %>
      <% else %>
        <%= link_to "About", about_path %>  |  <%= link_to "Terms", terms_path %> |  <%= link_to "FAQ", faq_path %>  |  <%= link_to "Tasks", tasks_path %>
          | <%= link_to "Users", users_path %> | <%= link_to "Projects", projects_path %>
        <%= link_to image_tag("galvanize-badge.png", class: "smaller_image"), "http://www.galvanize.it/#welcome" %>
        <%= link_to image_tag("twitter-badge.png", class: "small_image"), "https://twitter.com/jeffrey_mince" %>
        <%= link_to image_tag("git-badge.png", class: "small_image"), "https://github.com/JMince" %>
        <%= link_to image_tag("linked-in-badge.jpg", class: "small_image"), "https://www.linkedin.com/in/jeffmince" %>
      <% end %>
    </footer>
  </div>
</body>
</html>
