<div class="col-sm-12">
  <div class="page-header">
    <h1>
      <%= "#{@project.name}: Manage Members" %>
    </h1>
  </div>
    <ol class = "breadcrumb">
      <li> <%= link_to "Projects", projects_path %></li>
      <li><%= link_to @project.name, project_path(@project) %> </li>
      <li>Memberships</li>
    </ol>
    <div class "col-md-8">
    <div class="well">
    <%= render "form" %>
  </div>

  <table class="table">
    <thead>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </thead>
        <% @memberships.each do |membership| %>
          <% if membership.user.present? && membership.id.present? %>
            <%= form_for [@project, membership], html: {class: 'form-inline'} do |f| %>
            <tr>
                <td><%= link_to membership.user.full_name, user_path(membership.user), class: "pull-left" %>


                <td><%= f.select(:role, [['Owner',1], ['Member', 2]], {}, {class: 'form-control'}) %></td>

              <td><%= f.submit 'Update', class: "btn btn-info"  %></td>
              <td><%= link_to project_membership_path(@project,membership), method: :delete do %>
                  <span class="glyphicon glyphicon-remove"></span>
                  <% end %>
              </td>
            </tr>
            <% end %>

          <% end %>
      <% end %>

  </table>
    </div
</div>
