<div class = "page-header">
   <h1>
    Edit User
  </h1>
</div>
<div class="form-horizontal">
<ol class="breadcrumb">
<li><%= link_to "Users", users_path %></li>
<li class="active">Edit User</li>
</ol>
</br></br>

<%= form_for @user do |f| %>
<div class = "form-group">
<% if @user.errors.any? %>
<div class = "col-sm-6 col-sm-offset-2">
  <div class = "alert alert-danger">
    <h3> <%= pluralize(@user.errors.count, "Error") %> prohibted this task from being saved </h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
 </div>
</div>
<% end %>
</div>

<div class ="form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label" %>
   <div class = "col-sm-3">
    <%= f.text_field :first_name, class: "col-sm-4 form-control" %>
   </div>
</div>

<div class ="form-group"]>
   <%= f.label :last_name, class: "col-sm-2 control-label" %>
  <div class = "col-sm-3">
    <%= f.text_field :last_name, class: "col-sm-4 form-control" %>
  </div>
</div>

<div class ="form-group">
  <%= f.label :email, class: "col-sm-2 control-label" %>
  <div class = "col-sm-3">
  <%= f.text_field :email, class: "col-sm-4 form-control" %>
  </div>
</div>
<div class ="form-group">
  <div class = "col-sm-offset-2 col-sm-10">
    <%= f.submit "Update User", class: "btn btn-primary" %>
    <%= link_to 'Cancel', users_path, class: "btn btn-default" %>
  </div>
</div>

<div class ="form-group">
  <div class = "col-sm-offset-2 col-sm-3 text-center">
    <div class = "well">
    <%= link_to 'Delete User', user_path, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>

<% end %>
</form>
</div>
