
<div class = "page-header">
  <div class = "pull-right">
    <%= link_to 'New User', new_user_path, class: "btn btn-info" %>
  </div>
  <h1>Users</h1>
</div>

<table class = "table">
    <thead>
    <tr>
      <div class = "col-sm-1">
        <th>Name</th>
      </div>
      <div class = "col-sm-3">
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
       <tr>
          <td class = "col-sm-3"><%= link_to user.first_name + " " + user.last_name, user_path(user) %></td>
          <% if !match_users(user) || current_user.admin == true %>
            <td><%= mail_to user.email %></td>
          <% else %>
            <td></td>
          <% end %>
        <% if current_user.id == user.id || current_user.admin == true %>
         <td>
           <div class = "pull-right">
             <%= link_to 'Edit', edit_user_path(user) %>
           </div>
         </td>
        <% else %>
          <td></td>
        <% end %>
       </tr>
    <% end %>
  </tbody>
</table>
