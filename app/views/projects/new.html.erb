<div class = "page-header">
  <h1>New Project</h1>
</div>
<div class="form-horizontal">

<%= form_for Project.new do |f| %>
<div class = "form-group">
<% if @project.errors.any? %>
<div class = "col-sm-6 col-sm-offset-2">
  <div class = "alert alert-danger">
    <h3> <%= pluralize(@project.errors.count, "Error") %> prohibted this task from being saved </h3>
    <ul>
      <% @project.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
 </div>
</div>
<% end %>
</div>

<div class ="form-group">
  <%= f.label :name, class: "col-sm-2 control-label" %>
 <div class = "col-sm-5">
  <%= f.text_field :name, class: "col-sm-8 form-control" %>
  </div>
</div>

<div class ="form-group">
  <div class = "col-sm-offset-2 col-sm-10">
    <%= f.submit "Create Project", class: "btn btn-primary" %>
    <%= link_to 'Cancel', projects_path, class: "btn btn-default" %>
  </div>
</div>

<% end %>
