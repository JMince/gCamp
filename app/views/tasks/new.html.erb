  <div class = "page-header">
    <h1>New Task</h1>
  </div>
  <div class="form-horizontal">
  <ol class="breadcrumb">
    <li><%= link_to "Tasks", tasks_path %></li>
    <li class="active">New Task</li>
  </ol>
  </br></br>

  <%= form_for Task.new do |f| %>

  <div class ="form-group">
      <%= f.label :name, 'Description', class: "col-sm-2 control-label" %>
     <div class = "col-sm-4">
      <%= f.text_field :description %>
    </div>
  </div>


  <div class ="form-group">
    <div class = "col-sm-offset-2 col-sm-10">
      <%= f.submit "Create Task", class: "btn btn-primary" %>
      <%= link_to 'Cancel', tasks_path, class: "btn btn-default" %>
    </div>
  </div>

  <% end %>
