<div class = "page-header">
<h1>New Task</h1>
</div>
<div class="form-horizontal">
  <%= link_to "Tasks", tasks_path %> >
  <class="active">New Task
</div>

</br>
<p><%= form_for Task.new do |f| %></p>

<div class ="form-group">
    <%= f.label :name, 'Description', class: "col-sm-2 control-label" %>
  <div class = "col-sm-4">
    <%= f.text_field :description %>
  </div>
</div>
    <br>
  <%= f.submit "Create Task", class: "btn btn-primary" %>
  <%= link_to 'Cancel', tasks_path, class: "btn btn-default" %>
<% end %>
