<h1>Editing Task</h1>

<%= form_for @task, url: task_path(@task), method: :patch do |f| %>
  <div>
    <%= f.label :name, 'Description' %>
    <p><%= f.text_field :description %></p>
  </div>

  <p><%= f.submit "Update Task" %></p>
<% end %>
<p><%= link_to 'Show', task_path(@task[:id]) %> | <%= link_to 'Back', tasks_path %></p>
