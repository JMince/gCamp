  <div class = "page-header">
     <h1>
      Edit Task
    </h1>
  </div>
<div class="form-horizontal">
  <ol class="breadcrumb">
  <li><%= link_to "Tasks", tasks_path %></li>
  <li><%= link_to @task.description, tasks_path %></li>
  <li class="active">Edit Task</li>
</ol>
  </br></br>

  <%= form_for @task do |f| %>

  <div class ="form-group">
      <%= f.label :description, class: "col-sm-2 control-label" %>
     <div class = "col-sm-3">
      <%= f.text_field :description, class: "col-sm-8 form-control" %>
     </div>
  </div>

  <div class ="form-group"]>
     <%= f.label :name, "Due Date", class: "col-sm-2 control-label" %>
    <div class = "col-sm-2">
      <%= f.date_field :date, class: "col-sm-4 form-control" %>
    </div>
  </div>

  <div class ="form-group">
    <div class = "col-sm-offset-2 col-sm-10">
    <%= f.check_box :complete %>
    <%= f.label :complete %>
    </div>
  </div>
  <div class ="form-group">
    <div class = "col-sm-offset-2 col-sm-10">
      <%= f.submit "Update Task", class: "btn btn-primary" %>
      <%= link_to 'Cancel', tasks_path, class: "btn btn-default" %>
    </div>
  </div>

  <% end %>
