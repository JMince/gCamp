
    <div class = "page-header">
      <div class = "pull-right">
        <%= link_to 'New Task', new_task_path, class: "btn btn-info" %>
      </div>
      <h1>Tasks</h1>
    </div>

    <table class = "table">
      <thead>
        <tr>
          <th>Description</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
          <td><%= task.description %></td>
           <td>
          <div class = "pull-right">
            <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
            <%= link_to "Delete", task, method: :delete, class: "btn btn-danger" %>
          </div>
         </td>
        </tr>
        <% end %>

      </tbody>
    </table>
