
    <div class = "page-header">
      <div class = "pull-right">
        <%= link_to 'New Task', new_task_path, class: "btn btn-info" %>
      </div>
      <h1>Tasks</h1>
    </div>

    <table class = "table">
        <thead>
        <tr>
          <div class = "col-sm-1">
            <th>Description</th>
          </div>
          <div class = "col-sm-3">
          <th>Due Date</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
          <% if task.complete %>
              <td><s><%= link_to task.description, task_path(task) %></s></td>
          <% else %>
              <td><%= link_to task.description, task_path(task) %></td>
          <% end %>
              <td><%= task.date %></td>
             <td>
          <div class = "pull-right">
            <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
            <%= link_to "Delete", task, method: :delete, class: "btn btn-danger" %>
          </div>
         </td>
        </tr>
        <% end %>
      </tbody>
    </table>
